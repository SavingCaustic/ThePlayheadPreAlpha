{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build_debug",
                "--config", "Debug"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake: build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build_release",
                "--config", "Release"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
